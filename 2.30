#include <iostream>
using namespace std;
int main() {
  float peso = 0;
  float altura = 0;
  cout << "Coloque su peso y su altura" << endl;
  cout << "Coloque su peso:" << endl;
  cin >> peso;
  cout << "Ahora coloque su altura:" << endl;
  cin >> altura;
  float IMC = peso/(altura*altura);
  cout << "Este es su Masa Corporal: "<< IMC << endl;
  if (IMC < 18.5) {
    cout << "Usted esta bajo peso";
  }
  else if (IMC >= 18.5 && IMC <= 24.9) {
    cout << "Usted esta con peso normal";
  }
  else if (IMC > 24.9 && IMC <= 29.9) {
    cout << "Usted esta con sobrepeso";
  }
  else {
    cout << "Usted esta con Obesidad";
  }
}
