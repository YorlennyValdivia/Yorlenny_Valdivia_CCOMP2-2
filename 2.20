#include <iostream>
#include <math.h>
using namespace std;
float pi = 3.14159;
int main() {
    int radio;
    cout <<"ingrese el radio del circulo: " << endl;
    cin >> radio;
    float area = pi * pow(radio,2);
    int diametro = 2 * pi * radio;
    int circun= pi * diametro;
    cout << "el area del circulo es: " <<area<< endl;
    cout << "el diametro del circulo es: " << diametro <<endl;
    cout << "la circunferencia del circulo es: "<< circun<< endl;
    return 0; 
}
